GET /restaurants/_search
{
  "retriever": {
    "standard": {
      "query": {
        "bool": {
          "should": [
            {
              "match": {
                "region": "Austria"
              }
            }
          ],
          "filter": [
            {
              "term": {
                "year": "2019"
              }
            }
          ]
        }
      }
    }
  }
}
